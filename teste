#questão 1
def fibonacci(num):
    a, b = 0, 1
    while a <= num:
        if a == num:
            return True
        a, b = b, a + b
    return False
try:
    numero = int(input("Digite um número: "))
    if fibonacci(numero):
        print(f"O número {numero} pertence à sequência de Fibonacci.")
    else:
        print(f"O número {numero} NÃO pertence à sequência de Fibonacci.")
except ValueError:
    print("Por favor, insira um número inteiro válido.")
queestão 2
def verificando_letras (letra, texto):
    if letra in texto:
        return True
    else:
        return False
    usuario_letra = input("Digite uma letra: ")
    usuario_texto = input("digite um texto: ")

    if verifucar_letra(usuario_letra, usuario_texto):
        print(f"a letra {usuario_letra}, estar presente no texto")
    else:
        print(f"a letra {usuario_letra}, não estar presente no texto")
